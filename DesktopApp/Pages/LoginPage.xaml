<UserControl x:Class="DesktopApp.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:DesktopApp.Pages"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <LinearGradientBrush>
            <GradientStop Color="#CE9FFC" Offset="0.0" />
            <GradientStop Color="#7367F0" Offset="0.50" />
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        
        <materialDesign:Card  
                             Margin="30" 
                             materialDesign:UniformCornerRadius="20"
                             materialDesign:ElevationAssist.Elevation="Dp16"
                             MaxWidth="600" MaxHeight="300" MinHeight="200" MinWidth="400">
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Text="Вітаю вас у програмі!" FontSize="18" Padding="0 10 0 10" 
                           FontFamily="Inter" FontWeight="SemiBold" Foreground="Azure"/>
                <TextBlock Text="Будь ласка, увійдіть в свій обліковий запис" FontSize="14" Padding="0 0 0 10" 
                           FontFamily="Inter" FontWeight="Regular" Foreground="Azure"/>
                <DockPanel Margin="0 20 0 20">
                    <materialDesign:PackIcon Kind="AccountSchool" VerticalAlignment="Center"
                                             Height="30" Width="30" Foreground="Azure" Margin="0 0 10 0"/>
                    <TextBox x:Name="LoginTextBox" FontSize="14" Padding="0 0 0 10"
                             materialDesign:HintAssist.Hint="Email"
                             Foreground="Azure"
                             />
                </DockPanel>
                <DockPanel Margin="0 20 0 10">
                    <materialDesign:PackIcon Kind="Lock" VerticalAlignment="Center"
                                             Height="30" Width="30" Foreground="Azure" Margin="0 0 10 0"/>
                    <PasswordBox
                        x:Name="PasswordBox"
                        FontSize="14"
                        HorizontalContentAlignment="Stretch"
                        materialDesign:HintAssist.Hint="Password"
                        Foreground="Azure"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                    />
                </DockPanel>
                <Viewbox>
                    
                </Viewbox>
                <WrapPanel HorizontalAlignment="Center">
                    <Button materialDesign:ElevationAssist.Elevation="Dp7" Margin="0 20 10 0" 
                            Content="Зареєструватись" 
                            FontSize="14" 
                            Height="40" Width="200"
                            HorizontalAlignment="Right"
                            Foreground="Azure" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    <Button materialDesign:ElevationAssist.Elevation="Dp7" Margin="10 20 0 0" 
                            Content="Увійти" 
                            FontSize="14" 
                            Height="40" Width="200"
                            HorizontalAlignment="Right"
                            Foreground="Azure" 
                            Click="OnLoginButtonClick"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </WrapPanel>
            </StackPanel>
            
        </materialDesign:Card>
    </Grid>
</UserControl>
